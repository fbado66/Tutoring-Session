<div class='content'>
    <h1> Update Student Form</h1>

    <%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> 
    <%= f.label :language %>
    <%= f.text_field :language %>
    <%= f.label :age %>
    <%= f.number_field :age %> <br><br>
    <%=f.submit "Update Student" %>
    <% end %>
</div>